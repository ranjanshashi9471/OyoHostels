<% layout('layouts/boilerplate')%>

<style>
    .card-cont:hover{
        background:transparent;
        overflow: hidden;
    }
</style>
<div class="p-3 rounded shadow"><div id="cluster-map"></div></div>
<div class="container">
    <h1 class="mx-3">All Hostels</h1>
    <% for (let hostel of hostels){%>
    <div class="card m-3 shadow card-cont">
        <div class="row p-3">
            <div class="col-md-4">
                <%if(hostel.images.length) {%>
                <img class="img-fluid pt-2" alt="" src="<%=hostel.images[0].url%>">
                <% }else {%>
                    <img class="img-fluid pt-2" alt=""
                         src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= hostel.title %> </h5>
                    <p class="card-text"><%= hostel.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= hostel.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/hostels/<%=hostel._id%>">View <%=hostel.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const hostels = { features: <%- JSON.stringify(hostels) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>
