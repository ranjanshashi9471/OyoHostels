<% layout('layouts/boilerplate.ejs') %>

<div class="mx-auto mt-5 px-3 pb-3 card shadow bg-body-tertiary container-fluid" style="max-width: 640px;">
    <div class="row g-0">
        <div class="col-md-5 pt-3 px-2">
            <img src="https://images.unsplash.com/photo-1586214601498-4dbcfd0bf2c8?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=435&q=80" class="img-fluid rounded start" alt="">
        </div>
        <div class="col-md-7">
<!--            <div class=" bg-transparent">-->
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-2">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" autofocus required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-2">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-success btn-block">Login</button>
                        </div>
                    </form>
                </div>
<!--            </div>-->
        </div>
    </div>
</div>

